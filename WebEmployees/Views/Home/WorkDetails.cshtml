@model WebEmployees.works


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="modal-content">
    <div class="modal-header">
        <button class="close" data-dismiss="modal" area-hidden="true">X</button>
        <h4>Работа</h4>
    </div>
    <div class="modal-body">
        <div class="container-fluid">
            <dl class="dl-horizontal">

                @Html.ValidationSummary(true)
                @Html.HiddenFor(model => model.idWorks)

                <dt>Наименование</dt>
                <dd>@Html.TextBoxFor(m => m.name, new { @class = "form-control", placeholder = "Наименование", type = "text" })</dd>

                <br/>

                <dt>Цена</dt>
                <dd>@Html.TextBoxFor(m => m.Price, new { @class = "form-control", placeholder = "Цена", type = "number" })</dd>
            </dl>
        </div>

        <div class="modal-footer">
            <button class="btn btn-default" type="button" data-dismiss="modal">Закрыть</button>
            <button class="btn btn-primary" type="submit">Сохранить изменения</button>
        </div>

    </div>
</div>
}
